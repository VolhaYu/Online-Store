{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "es6",
    "target": "es5",
    "lib": ["ES6", "DOM"],
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": "./src", 
    "outDir": "./dist",
    "esModuleInterop": true,   
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true, 
    "strict": true, 
    "skipLibCheck": true  
  },
  "files": ["src/index.ts"]
}
